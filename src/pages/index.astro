---
import Layout from "../layouts/Layout.astro";
import ilianaImage from "../assets/images/Iliana.jpg";
import familyImage from "../assets/images/Family.jpg";

// This area between the dashes is "Server Side JavaScript".
// You can fetch data or import components here.
const icons = {
	github: "M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22",
	briefcase: "M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16 M2 7h20v14H2z",
	"book-open":
		"M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z",
	server: "M2 2h20v8H2z M2 14h20v8H2z M6 6h.01 M6 18h.01",
	umbrella: "M12 2v20 M12 2a10 10 0 0 1 10 10H2A10 10 0 0 1 12 2z",
	heart: "M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z",
};

type IconKey = keyof typeof icons;

const donationLink = {
	title: "Iliana's College Fund",
	url: "https://www.ugift529.com/gifttpl/ugift/create/viewGiftCodeDetails.cs?ugiftcode=X9V-A82",
	subtitle:
		"Code: <b>X9V-A82</b><br/>Help Iliana reach her dreams! This is a Schwab 529 Education plan and is strictly controlled to only be spent on education-related expenses. We appreciate your generosity and support!",
	image: ilianaImage,
};

const familyLink = {
	title: "Our Family Media",
	url: "https://family.ivantsov.tech",
	subtitle:
		"Our family's collection of pictures, videos, and memories all in one place. This application is called 'Jellyfin' and you must have a login to access it. If you are a family member and need help accessing, please reach out to me directly.",
	image: familyImage,
};

const otherLinks = [
	{
		title: "Umbrella IT Solutions",
		url: "https://umbrellaitgroup.com",
		icon: "umbrella" as IconKey,
		subtitle: "Where to find me for work",
	},
	{
		title: "My GitHub",
		url: "https://github.com/Exploitacious",
		icon: "github" as IconKey,
		subtitle: "MSP Resources and Personal Projects",
	},
	{
		title: "LinkedIn",
		url: "https://www.linkedin.com/in/alex-ivantsov-551a08154/",
		icon: "briefcase" as IconKey,
		subtitle: "Professional Profile",
	},
	{
		title: "Current Status",
		url: "https://status.ivantsov.tech",
		icon: "server" as IconKey,
		subtitle: "Ivantsov.tech Status & Uptime",
	},
];
---

<Layout title="Ivantsov.tech">
	<main
		class="min-h-screen bg-slate-950 flex flex-col items-center justify-center p-6 font-sans text-slate-200"
	>
		<div class="text-center space-y-4 mb-12 animate-fade-in-down">
			<div
				class="relative w-64 h-64 md:w-72 md:h-72 mx-auto rounded-full overflow-hidden border-4 border-slate-800 shadow-xl shadow-cyan-900/20"
			>
				<img
					src="https://media.licdn.com/dms/image/v2/D4E03AQGZtGkOChCdMw/profile-displayphoto-shrink_800_800/profile-displayphoto-shrink_800_800/0/1720008229617?e=1770249600&v=beta&t=kw0zGkRpQK2AUeNYACZYwbebmFTDDDoYpDG8AF0tBMo"
					alt="Profile"
					class="w-full h-full object-cover"
				/>
			</div>

			<h1
				class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-cyan-400 to-blue-600"
			>
				Alex Ivantsov
			</h1>
			<p class="text-lg text-slate-400 font-mono">
				SysAdmin | Operations Manager | Father | Builder
			</p>
		</div>

		<div class="w-full max-w-2xl space-y-12">
			<!-- Section 1: Donation (Image Left) -->
			<a
				href={donationLink.url}
				target="_blank"
				rel="noopener noreferrer"
				class="group relative block transition-transform duration-300 hover:-translate-y-1"
			>
				<div
					class="absolute -inset-0.5 bg-gradient-to-r from-purple-600 to-fuchsia-600 rounded-2xl blur opacity-20 group-hover:opacity-75 transition duration-500 group-hover:duration-200"
				>
				</div>
				<div
					class="relative flex flex-col md:flex-row items-center bg-slate-900 rounded-2xl p-6 md:p-8 border border-slate-800 overflow-hidden"
				>
					<img
						src={donationLink.image.src}
						alt={donationLink.title}
						class="w-48 h-48 md:w-60 md:h-60 rounded-lg object-cover mb-6 md:mb-0 md:mr-8 shadow-lg"
					/>
					<div class="flex-1">
						<div class="flex items-center gap-3 mb-2">
							<h2
								class="text-2xl md:text-3xl font-bold text-slate-100 group-hover:text-purple-400 transition-colors"
							>
								{donationLink.title}
							</h2>
						</div>
						<p
							class="text-base md:text-lg text-slate-400 leading-relaxed"
							set:html={donationLink.subtitle}
						/>
					</div>
				</div>
			</a>

			<!-- Section 2: Family (Image Right) -->
			<a
				href={familyLink.url}
				target="_blank"
				rel="noopener noreferrer"
				class="group relative block transition-transform duration-300 hover:-translate-y-1"
			>
				<div
					class="absolute -inset-0.5 bg-gradient-to-r from-purple-600 to-indigo-600 rounded-2xl blur opacity-20 group-hover:opacity-75 transition duration-500 group-hover:duration-200"
				>
				</div>
				<div
					class="relative flex flex-col-reverse md:flex-row items-center bg-slate-900 rounded-2xl p-6 md:p-8 border border-slate-800 overflow-hidden"
				>
					<div class="flex-1">
						<div class="flex items-center gap-3 mb-2">
							<h2
								class="text-2xl md:text-3xl font-bold text-slate-100 group-hover:text-purple-400 transition-colors"
							>
								{familyLink.title}
							</h2>
						</div>
						<p
							class="text-base md:text-lg text-slate-400 leading-relaxed"
							set:html={familyLink.subtitle}
						/>
					</div>
					<img
						src={familyLink.image.src}
						alt={familyLink.title}
						class="w-48 h-48 md:w-60 md:h-60 rounded-lg object-cover mb-6 md:mb-0 md:ml-8 shadow-lg"
					/>
				</div>
			</a>

			<!-- Section 3: Grid of Other Links -->
			<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
				{
					otherLinks.map((link) => (
						<a
							href={link.url}
							target="_blank"
							rel="noopener noreferrer"
							class="group relative flex items-center p-4 rounded-xl bg-slate-900/50 border border-slate-800 backdrop-blur-sm hover:border-purple-500/50 transition-all duration-300 hover:shadow-[0_0_20px_-5px_rgba(168,85,247,0.15)] hover:-translate-y-1"
						>
							<div class="p-3 rounded-lg bg-slate-800 group-hover:bg-purple-950 text-cyan-400 group-hover:text-purple-400 transition-colors mr-4">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									width="28"
									height="28"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"
								>
									<path d={icons[link.icon]} />
								</svg>
							</div>
							<div>
								<h2 class="text-lg font-semibold text-slate-100 group-hover:text-purple-400 transition-colors">
									{link.title}
								</h2>
								<p class="text-xs text-slate-500 font-mono">
									{link.subtitle}
								</p>
							</div>
						</a>
					))
				}
			</div>
		</div>

		<footer class="mt-16 text-slate-600 text-sm font-mono">
			&copy; {new Date().getFullYear()} Ivantsov.tech
		</footer>
	</main>
</Layout>

<style>
	/* Simple animation for the load-in */
	.animate-fade-in-down {
		animation: fadeInDown 0.8s ease-out;
	}
	@keyframes fadeInDown {
		from {
			opacity: 0;
			transform: translateY(-20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>
